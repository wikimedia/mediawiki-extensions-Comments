[project]
	description = Comments extension adds the <comments> parser hook tag to allow commenting on articles where the tag is present.
	state = active
[access]
	inheritFrom = mediawiki/extensions
[receive]
	requireChangeId = true
[submit]
	mergeContent = true
[access "refs/*"]
	owner = group ShoutWiki
	owner = group extension-Comments
	create = group ShoutWiki
	create = group extension-Comments
	push = group ShoutWiki
	push = group extension-Comments
	pushMerge = group ShoutWiki
	pushMerge = group extension-Comments
